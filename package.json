{
  "name": "pause",
  "version": "0.9.0",
  "description": "Health-centered productivity companion",
  "author": {
    "name": "Thomsch",
    "email": "thms.sch@gmail.com",
    "url": "https://github.com/Thomsch/pause"
  },
  "homepage": "https://github.com/Thomsch/pause",
  "license": "ISC",
  "main": "src/main/app.js",
  "repository": "github:Thomsch/pause",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --publish never",
    "deploy": "electron-builder build --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "mousetrap": "^1.6.5",
    "tiny-timer": "^1.4.0"
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "org.thomsch.pause",
    "productName": "Pause",
    "copyright": "Copyright Â© 2020 Thomsch",
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons/",
      "category": "Utility",
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
