<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox alignment="CENTER" onKeyPressed="#onEnterPressed" prefHeight="101.0" prefWidth="318.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.thomsch.pause.SettingsController">
   <BorderPane id="window-bar" maxHeight="26.0" minHeight="26.0" onMouseDragged="#onMouseDraggedWindowBar" onMousePressed="#onMousePressedWindowBar" prefHeight="25.0" prefWidth="200.0" VBox.vgrow="NEVER">
      <right>
         <Button id="exit-button" alignment="CENTER" focusTraversable="false" maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" onMouseClicked="#onMouseClickedExit" prefHeight="25.0" prefWidth="25.0" text="x" textAlignment="CENTER" textOverrun="CLIP">
            <tooltip>
               <Tooltip text="Click to hide this window&#10;Shift-click to close the program" />
            </tooltip></Button>
      </right>
      <left>
         <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
               <Image url="@icon-window.png" />
            </image>
            <BorderPane.margin>
               <Insets left="4.0" />
            </BorderPane.margin>
         </ImageView>
      </left>
      <center>
         <Label id="decoration-title" text="Pause" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
               <Insets left="5.0" />
            </BorderPane.margin>
         </Label>
      </center>
   </BorderPane>
   <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
      <children>
         <BorderPane prefHeight="200.0" prefWidth="200.0">
            <left>
                  <HBox alignment="CENTER_LEFT" prefWidth="300.0" spacing="5.0" BorderPane.alignment="CENTER">
                      <Label text="Time between pauses is" />
                      <TextField fx:id="timeField" prefColumnCount="2" promptText="In minutes" text="45" />
                  <Label text="minutes." />
                  </HBox>
            </left>
            <right>
                   <ToggleButton fx:id="onOffButton" maxHeight="62.0" maxWidth="62.0" minHeight="62.0" minWidth="62.0" onAction="#onButtonAction" prefHeight="62.0" prefWidth="62.0" text="Activate" BorderPane.alignment="CENTER" />
            </right>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </BorderPane>
         <ProgressBar fx:id="progress" maxWidth="Infinity" progress="0.0" />
      </children>
      <padding>
         <Insets left="10.0" right="10.0" top="10.0" />
      </padding>
   </VBox>
   <Separator prefWidth="200.0" />
   <BorderPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="21.0" prefWidth="318.0" VBox.vgrow="NEVER">
       <left>
           <Label text="v0.6" BorderPane.alignment="CENTER" />
       </left>

       <right>
         <Hyperlink fx:id="about" focusTraversable="false" onAction="#onAboutActionClick" text="About" BorderPane.alignment="CENTER" />
      </right>

      <padding>
         <Insets bottom="5.0" left="10.0" right="10.0" />
      </padding>
   </BorderPane>
    <stylesheets>
        <URL value="@/stylesheet.css" />
    </stylesheets>
</VBox>
